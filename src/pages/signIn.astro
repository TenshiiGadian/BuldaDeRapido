---
import Layout from "../Layouts/Layout.astro";
import HeaderPage from "../components/HeaderPage.astro";
---

<Layout>
  <main class="[&>section]:px-[10%] h-screen flex flex-col items-center gap-5">
    <HeaderPage />
    <div
      style="background: url(/signIn_signUp_bgImage.webp) no-repeat; width: 250px;height: 250; background-size: 250px;"
      class="mt-[90px]"
    >
      <h2
        class="w-[350px] h-[250px] uppercase text-center py-16 pr-[75px] font-bold text-[40px]"
      >
        Bulda e Rapido
      </h2>
    </div>
    <section class="flex flex-col gap-5 bg-[#fafafa] rounded shadow-2xl">
      <h3 class="text-center font-bold text-2xl mt-5">SignIn</h3>
      <form class="flex flex-col gap-3">
        <input
          class="px-3 py-2 w-[300px] h-10 border-2 focus:border-[#666] outline-none"
          type="text"
          placeholder="Username"
        />
        <input
          class="px-2 py-1 w-[300px] h-10 border-2 focus:border-[#666] outline-none"
          type="password"
          placeholder="Password"
        />
        <button
          class="px-4 py-2 rounded text-black bg-[#ff8831] shadow-2xl hover:bg-[#ffa851] hover:border-spacing-1 mb-10"
          >SignIn</button
        >
      </form>
    </section>
  </main>
</Layout>
<style is:global>
  @font-face {
    font-family: "UbuntuCondensed";
    src: url("/fonts/UbuntuCondensed.ttf");
    font-weight: normal;
    font-display: swap;
  }
</style>
