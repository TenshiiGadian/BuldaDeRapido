---
interface Props {
  name?: string;
  area?: string;
  image?: string;
}
const {
  name = "Default name",
  area = "Desc default",
  image = "#",
} = Astro.props;
---

<div class="bg-white rounded px-2 py-2 shadow-2xl flex gap-5">
  <img width="100" height="100" class="rounded" src={image} alt={name + area} />
  <div>
    <h4 class="font-bold text-lg">{name}</h4>
    <h5>{area}</h5>
  </div>
</div>
